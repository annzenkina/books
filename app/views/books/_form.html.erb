<div class="row">
  <div class="col-md-4">

    <%= form_with(model: book, local: true) do |form| %>
      <% if book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

          <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">

              <%= form.label :id, :ISBN%>
              <%= form.text_field :id, id: :id, class: "form-control"%>
            <!-- </div> -->
          <!-- </div> -->
        </div>
      <!-- </div> -->
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :book_title, class: "form-control"%>
      </div>
      <div class="form-group">
          <%= form.label :author %>
          <%= form.text_field :author, id: :book_author, class: "form-control"%>
      </div>
      <div class="form-group">
        <div class="field">
          <%= form.label :year %>
          <%= form.number_field :year, id: :book_year, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="actions">
          <%= form.submit%>
        </div>
      </div>
    <% end %>
  </div>
</div>
